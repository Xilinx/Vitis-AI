{
    "name": "Xilinx GQE Sorting",
    "description": "Xilinx GQE Sorting",
    "flow": "vitis",
    "gui": false,
    "platform_type": "pcie",
    "platform_whitelist": [
        "u200",
        "u250"
    ],
    "platform_blacklist": [
        "other"
    ],
    "platform_properties": {
        "u250": {
            "host": {
                "compiler": {
                    "symbols": [
                        "USE_DDR"
                    ]
                }
            }, 
            "v++": {
                "compiler": {
                    "cflags": [
                        "--config PROJECT/conn_u250.cfg"
                    ]
                }
            }
        }, 
        "u200": {
            "host": {
                "compiler": {
                    "symbols": [
                        "USE_DDR"
                    ]
                }
            }, 
            "v++": {
                "compiler": {
                    "cflags": [
                        "--config PROJECT/conn_u200.cfg"
                    ]
                }
            }
        }
    },
    "pre_build": [
        {
            "build_cmd": "make -C PROJECT/gen_data data SS=1 LN=2 TARGET=$(TARGET) DEVICE=$(DEVICE)"
        }
    ],
    "launch": [
        {
            "name": "generic launch for sw_emu flows",
            "target": "sw_emu",
            "cmd_args": " --xclbin BUILD/gqe_sorting.xclbin -i gen_data/demo_data/input_1M_0.dat -o gen_data/demo_data/output_1M_0.dat --accept-EULA"
        },
        {
            "name": "generic launch for hw_emu flows",
            "target": "hw_emu",
            "cmd_args": " --xclbin BUILD/gqe_sorting.xclbin -i gen_data/demo_data/input_1M_0.dat -o gen_data/demo_data/output_1M_0.dat --accept-EULA"
        },
        {
            "name": "generic launch for hw flows",
            "target": "hw",
            "cmd_args": " --xclbin BUILD/gqe_sorting.xclbin -i gen_data/demo_data/input_1M_0.dat -o gen_data/demo_data/output_1M_0.dat --accept-EULA"
        }
    ],
    "host": {
        "host_exe": "test.exe",
        "compiler": {
            "sources": [
                "host/test_sorting.cpp",
                "host/db_intpair_sort_1g.cpp"
            ],
            "includepaths": [
                "LIB_DIR/../utils/L1/include/",
                "host"
            ],
            "options": "-O3 -std=c++14"
        }
    },
    "v++": {
        "compiler": {
            "includepaths": [
                "LIB_DIR/L2/demos/gqeSort/kernel/include"
            ],
            "hls_jobs": 16
        },
        "linker": {
            "synth_jobs": 16,
            "impl_jobs": 16
        }
    },
    "containers": [
        {
            "name": "gqe_sorting",
            "accelerators": [
                {
                    "name": "gqe_insert_kernel_0",
                    "location": "LIB_DIR/L2/demos/gqeSort/kernel/insert_kernel_0.cpp",
                    "frequency": 250,
                    "num_compute_units": 1
                },
                {
                    "name": "gqe_merge_kernel_0",
                    "location": "LIB_DIR/L2/demos/gqeSort/kernel/merge_kernel_0.cpp",
                    "frequency": 250,
                    "num_compute_units": 1
                },
                {
                    "name": "gqe_merge_kernel_1",
                    "location": "LIB_DIR/L2/demos/gqeSort/kernel/merge_kernel_1.cpp",
                    "frequency": 250,
                    "num_compute_units": 1
                },
                {
                    "name": "gqe_merge_kernel_2",
                    "location": "LIB_DIR/L2/demos/gqeSort/kernel/merge_kernel_2.cpp",
                    "frequency": 250,
                    "num_compute_units": 1
                },
                {
                    "name": "gqe_merge_kernel_3",
                    "location": "LIB_DIR/L2/demos/gqeSort/kernel/merge_kernel_3.cpp",
                    "frequency": 250,
                    "num_compute_units": 1
                }
            ],
            "frequency": 250,
            "ldclflags": "--config PROJECT/cfg.ini --xp vivado_param:project.writeIntermediateCheckpoints=1"
        }
    ],
    "docker_container": {
        "vendor": "on_premise",
        "metadata":{
            "app_name": "Xilinx Sorting Auto",
            "owner": "sdausr", 
            "app_description": "32-bit integer (pair) sorting (max support 1G int pairs)",
            "internal": true,
            "multi_xrt": true
        },
        "xrt": {
            "2019.2": {
                "version": "2019.2_released", 
                "location": "BUILDLOCATION/2019.2_released/xbb/xrt/packages"
            }, 
            "2020.1": {
                "version": "2020.1_released", 
                "location": "BUILDLOCATION/2020.1_released/xbb/xrt/packages"
            }, 
            "2020.2": {
                "version": "2020.2_released", 
                "location": "BUILDLOCATION/2020.2_released/xbb/xrt/packages"
            }
         }, 
        "shell": {
            "xilinx_u200_xdma_201830_2": {
                "version": "xilinx_u200_xdma_201830_2", 
                "location": "BUILDLOCATION/2020.1_released/xbb/dsabin/internal_platforms/xilinx_u200_xdma_201830_2"
            }, 
            "xilinx_u250_xdma_201830_2": {
                "version": "xilinx_u250_xdma_201830_2", 
                "location": "BUILDLOCATION/2020.1_released/xbb/dsabin/internal_platforms/xilinx_u250_xdma_201830_2"
            }
         },
	"launch": {
            "docker_cmd_args": "", 
            "app_exe": "/opt/xilinx/apps/vt_database/sort/bin/vt_database_sort.exe", 
            "app_args": "--accept-EULA --in ${DATA_DIR}/input.dat --out ${DATA_DIR}/output.dat"
         }, 
        "provisioners":[
            {
                "type": "shell",
                "inline": ["echo \"source /opt/xilinx/xrt/setup.sh\" >> /etc/bash.bashrc","echo \"cat /opt/xilinx/apps/vt_database/sort/docs/README.txt\" >> /etc/bash.bashrc", "mkdir -p /opt/xilinx/apps/vt_database/sort/bin","mkdir -p /opt/xilinx/apps/vt_database/sort/share/xclbin","mkdir -p /opt/xilinx/apps/vt_database/sort/share/data","mkdir -p /opt/xilinx/apps/vt_database/sort/lib","mkdir -p /opt/xilinx/apps/vt_database/sort/docs"]
            },
	    {
		"type": "file",
		"source": "PROJ_PATH/app-test-meta.json",
		"destination": "/opt/xilinx/apps/vt_database/sort/app-test-meta.json"
	    },
	    {
		"type": "file",
		"source": "PROJ_PATH/BUILD_DIR_u250/test.exe",
		"destination": "/opt/xilinx/apps/vt_database/sort/bin/vt_database_sort.exe"
	    },
	    {
		"type": "file",
		"source": "PROJ_PATH/BUILD_DIR_u250/gendata.exe",
		"destination": "/opt/xilinx/apps/vt_database/sort/bin/gendata.exe"
	    },
	    {
		"type": "file",
		"source": "PROJ_PATH/binary_wrapper.sh",
		"destination": "/opt/xilinx/apps/vt_database/sort/bin/run.sh"
	    },
	    {
		"type": "shell",
		"inline": ["chmod 755 /opt/xilinx/apps/vt_database/sort/bin/run.sh"]
	    },
	    {
		"type": "file",
		"source": "PROJ_PATH/docker_README",
		"destination": "/opt/xilinx/apps/vt_database/sort/docs/README.txt"
	    },
	    {
		"type": "file",
		"source": "PROJ_PATH/docker_license.txt",
		"destination": "/opt/xilinx/apps/vt_database/sort/docs/license.txt"
	    },
	    {
		"type": "file",
		"source": "PROJ_PATH/BUILD_DIR_u250/demo_data",
		"destination": "/etc/skel/demo_data"
	    },
	    {
		"type": "shell",
		"inline": ["ln -s /opt/xilinx/apps/vt_database/sort/docs/README.txt /home/README.txt", "ln -s /opt/xilinx/apps/vt_database/sort/docs/README.txt /etc/skel/README.txt","ln -s /etc/skel/demo_data /home/nimbix/demo_data"]
	    },
	    {
		"type": "label",
		"key": "app-test-meta",
		"value": "/opt/xilinx/apps/vt_database/sort/app-test-meta.json"
	    }
        ],
        "post_processors": {
            "repository": "xdock:5000/xilinx_sorting_auto",
            "tag": "auto",
            "push_after_build": true
        },
        "app_info":{
	    "os_version": "ubuntu-18.04", 
            "sw_shell_version": [
                {
                    "xrt": [
                        [
                            "2019.2", 
                            "2020.1",
			    "2021.1"
                        ]
                    ], 
                    "shell": [
		        {
			    "xilinx_u200_xdma_201830_2":
				{
				    "v++": "2020.1"
				}
			},
		        {
			    "xilinx_u250_xdma_201830_2":
				{
				    "v++": "2020.1"
				}
			}
                    ]
                }
            ],
	    "platform": ["alveo-u200","alveo-u250"]
        }
    },
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": {
                    "vitis_hw_build": 81920,
                    "vitis_hw_emu": 28672,
                    "vitis_sw_emu": 10240,
                    "vitis_hw_run": 10240
                },
                "max_time_min": {
                    "vitis_hw_build": 1200,
                    "vitis_hw_emu": 720,
                    "vitis_sw_emu": 60,
                    "vitis_hw_run": 15
                }
            }
        ],
        "targets": [
            "docker_build"
        ],
        "category": "canary"
    }
}
