{
    "name": "Xilinx LZ4 P2P Application For Decompression", 
    "description": [
        "LZ4_P2P application for decompression resides in `L3/benchmarks/lz4_p2p_decompress` directory."
    ], 
    "flow": "vitis", 
    "platform_blacklist": [
        "u50", 
        "u280", 
        "zc", 
        "vck"
    ], 
    "platform_whitelist": [
        "samsung_u2",
        "samsung_U2",
        "u200", 
        "u250"
    ], 
    "default_device": "samsung_u2",
    "launch": [
        {
            "cmd_args": "-dx BUILD/decompress.xclbin -d PROJECT/sample.txt.lz4", 
            "name": "generic launch for all flows"
        }
    ], 
    "post_launch": [
        {
            "launch_cmd": [
                  "./run.sh HOST_EXE LIB_DIR BUILD/decompress.xclbin"
             ]
        }
    ], 
    "match_ini": "false", 
    "config_make": "./config.mk", 
    "host": {
        "host_exe": "xil_lz4", 
        "compiler": {
            "sources": [
                "./src/host.cpp", 
                "LIB_DIR/L3/src/lz4_p2p_dec.cpp", 
                "LIB_DIR/common/libs/xcl2/xcl2.cpp", 
                "LIB_DIR/common/libs/cmdparser/cmdlineparser.cpp", 
                "LIB_DIR/common/libs/logger/logger.cpp", 
                "LIB_DIR/common/thirdParty/xxhash/xxhash.c"
            ], 
            "includepaths": [
                "LIB_DIR/L3/include", 
                "LIB_DIR/L2/include", 
                "LIB_DIR/L1/include/hw",
                "LIB_DIR/common/thirdParty/xxhash"
            ], 
            "symbols": [
                "PARALLEL_BLOCK=1", 
                "C_COMPUTE_UNIT=1", 
                "D_COMPUTE_UNIT=2", 
                "OVERLAP_HOST_DEVICE"
            ]
        }
    }, 
    "v++": {
        "compiler": {
            "symbols": [
                "PARALLEL_BLOCK=1",
                "MULTIPLE_BYTES=8"
            ],
         "includepaths": [
               "LIB_DIR/L2/tests/src"
            ]
        }
    }, 
    "containers": [
        {
            "name": "decompress", 
            "ldclflags": "--config PROJECT/connectivity.cfg",
            "accelerators": [
                {
                    "name": "xilLz4DecompressStream", 
                    "location": "LIB_DIR/L2/src/lz4_multibyte_decompress_stream.cpp", 
                    "num_compute_units": "2"
                }, 
                {
                    "name": "xilDecompDatamover", 
                    "location": "LIB_DIR/L2/tests/src/block_decomp_multibyte_dm.cpp",
                    "num_compute_units": "2"
                }
            ]
        }
    ], 
    "output_files": [
           "sample.txt.lz4.*"
    ], 
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": {
                    "vitis_hw_build": 40960, 
                    "vitis_hw_emu": 28672, 
                    "vitis_sw_emu": 10240, 
                    "vitis_hw_run": 10240
                }, 
                "max_time_min": {
                    "vitis_hw_build": 470, 
                    "vitis_hw_emu": 300, 
                    "vitis_sw_emu": 25, 
                    "vitis_hw_run": 10
                }
            }
        ], 
        "targets": [
            "vitis_sw_emu", 
            "vitis_hw_emu", 
            "vitis_hw_build", 
            "vitis_hw_run"
        ], 
        "category": "canary"
    }
}
