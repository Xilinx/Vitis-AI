{
    "name": "Xilinx LZ4 P2P Decompress", 
    "description": [
        "LZ4-Streaming P2P Decompression ParallelByte8"
    ], 
    "flow": "vitis", 
    "launch": [
        {
            "cmd_args": "-dx BUILD/decompress_streaming.xclbin -d PROJECT/sample.txt.lz4", 
            "name": "generic launch for all flows"
        }
    ], 
    "post_launch": [
        {
            "launch_cmd": [
                "./run.sh HOST_EXE LIB_DIR BUILD/decompress_streaming.xclbin"
            ]
        }
    ], 
    "platform_blacklist": [
        "zc"
    ], 
    "platform_whitelist": [
        "samsung_u2", 
        "samsung_U2", 
        "u200", 
        "u250", 
        "u50", 
        "vck190", 
        "aws-vu9p-f1"
    ],
    "data": [
        "PROJECT/data/sample.txt",
        "PROJECT/data/sample.txt.lz4" 
    ],   
    "config_make": "./config.mk", 
    "platform_properties": {
        "samsung_u2": {
            "host": {
                "compiler": {
                    "symbols": [
                        "ENABLE_P2P=1"
                    ]
                }
            }
        }, 
        "samsung_U2": {
            "host": {
                "compiler": {
                    "symbols": [
                        "ENABLE_P2P=1"
                    ]
                }
            }
        }, 
        "vck190": {
            "host": {
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib", 
                        "${SYSROOT}/opt/xilinx/xrt/lib"
                    ]
                }, 
                "compiler": {
                    "includepaths": [
                        "$(SYSROOT)/usr/include"
                    ], 
                    "options": "--sysroot=$(SYSROOT)"
                }
            }
        }
    }, 
    "host": {
        "host_exe": "lz4", 
        "compiler": {
            "sources": [
                "./src/host.cpp", 
                "LIB_DIR/L2/tests/src/lz4_stream.cpp", 
                "LIB_DIR/common/libs/xcl2/xcl2.cpp", 
                "LIB_DIR/common/libs/cmdparser/cmdlineparser.cpp", 
                "LIB_DIR/common/libs/logger/logger.cpp", 
                "LIB_DIR/common/thirdParty/xxhash/xxhash.c"
            ], 
            "includepaths": [
                "LIB_DIR/L2/include", 
                "LIB_DIR/L2/tests/src/", 
                "LIB_DIR/common/thirdParty/xxhash"
            ]
        }
    }, 
    "v++": {
        "compiler": {
            "symbols": [
                "PARALLEL_BLOCK=1", 
                "MULTIPLE_BYTES=8"
            ]
        }
    }, 
    "containers": [
        {
            "name": "decompress_streaming", 
            "ldclflags": "--config PROJECT/connectivity.cfg", 
            "accelerators": [
                {
                    "name": "xilLz4DecompressStream", 
                    "location": "LIB_DIR/L2/src/lz4_multibyte_decompress_stream.cpp"
                }, 
                {
                    "name": "xilDecompDatamover", 
                    "location": "LIB_DIR/L2/tests/src/block_decomp_multibyte_dm.cpp"
                }
            ]
        }
    ],
    "output_files": [
            "data/sample.txt.lz4.*",
            "sample_run.*",
            "test.list"
    ],        
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": {
                    "vitis_hw_build": 40960, 
                    "vitis_hw_emu": 28672, 
                    "vitis_sw_emu": 10240, 
                    "vitis_hw_run": 10240
                }, 
                "max_time_min": {
                    "vitis_hw_build": 470, 
                    "vitis_hw_emu": 300, 
                    "vitis_sw_emu": 25, 
                    "vitis_hw_run": 10
                }
            }
        ], 
        "targets": [
            "vitis_sw_emu", 
            "vitis_hw_emu", 
            "vitis_hw_build", 
            "vitis_hw_run"
        ], 
        "category": "canary"
    }
}
