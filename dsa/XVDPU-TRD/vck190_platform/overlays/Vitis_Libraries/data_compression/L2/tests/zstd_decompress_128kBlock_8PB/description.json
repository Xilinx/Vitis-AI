{
    "name": "Xilinx ZSTD Decompress 128KB Block 8PB", 
    "description": [
        "Xilinx ZSTD Decompression for 128KB block since with 8 Byte data width"
    ], 
    "flow": "vitis", 
    "platform_blacklist": [], 
    "platform_whitelist": [
        "u200", 
        "u250", 
        "u50", 
        "u280", 
        "vck190", 
        "aws-vu9p-f1"
    ],
    "data": [
        "PROJECT/data/sample.txt.zst" 
    ],   
    "launch": [
        {
            "cmd_args": "-xbin BUILD/xilZstdDecompressStream.xclbin -d PROJECT/data/sample.txt.zst", 
            "name": "generic launch for all flows"
        }
    ], 
    "post_launch": [
        {
            "launch_cmd": [
                "./run.sh HOST_EXE LIB_DIR BUILD/xilZstdDecompressStream.xclbin"
            ]
        }
    ], 
    "config_make": "./config.mk", 
    "host": {
        "host_exe": "xil_zstd", 
        "compiler": {
            "sources": [
                "./src/host.cpp", 
                "LIB_DIR/common/libs/compress/zstdOCLHost.cpp",
                "LIB_DIR/common/libs/compress/zstdApp.cpp", 
                "LIB_DIR/common/libs/compress/compressApp.cpp",
                "LIB_DIR/common/libs/xcl2/xcl2.cpp", 
                "LIB_DIR/common/libs/cmdparser/cmdlineparser.cpp", 
                "LIB_DIR/common/libs/logger/logger.cpp"
            ], 
            "includepaths": [
                "LIB_DIR/common/libs/compress/",
                "LIB_DIR/L2/include", 
                "LIB_DIR/L1/include/hw", 
                "LIB_DIR/L2/tests/src"
            ], 
            "symbols": [
                "MULTIPLE_BYTES=8", 
                "ZSTD_BLOCK_SIZE_KB=128"
            ]
        }
    }, 
    "v++": {
        "compiler": {
            "symbols": [
                "INZSTD=1", 
                "MULTIPLE_BYTES=8", 
                "ZSTD_BLOCK_SIZE_KB=128"
            ], 
            "includepaths": [
                "LIB_DIR/../security/L1/include"
            ]
        }
    }, 
    "containers": [
        {
            "name": "xilZstdDecompressStream", 
            "ldclflags": "--config PROJECT/connectivity.cfg", 
            "accelerators": [
                {
                    "name": "xilGzipS2MM", 
                    "location": "LIB_DIR/L2/tests/src/gzip_dm_s2mm.cpp"
                }, 
                {
                    "name": "xilGzipMM2S", 
                    "location": "LIB_DIR/L2/tests/src/gzip_dm_mm2s.cpp"
                }, 
                {
                    "name": "xilZstdDecompressStream", 
                    "location": "LIB_DIR/L2/src/zstd_decompress_stream.cpp"
                }
            ]
        }
    ], 
    "output_files": [
           "data/sample.txt.zst.*"
    ], 
    "testinfo": {
        "disable": false, 
        "jobs": [
            {
                "index": 0, 
                "dependency": [], 
                "env": "", 
                "cmd": "", 
                "max_memory_MB": {
                    "vitis_hw_build": 40960, 
                    "vitis_hw_emu": 28672, 
                    "vitis_sw_emu": 10240, 
                    "vitis_hw_run": 10240
                }, 
                "max_time_min": {
                    "vitis_hw_build": 470, 
                    "vitis_hw_emu": 300, 
                    "vitis_sw_emu": 25, 
                    "vitis_hw_run": 10
                }
            }
        ], 
        "targets": [
            "vitis_sw_emu", 
            "vitis_hw_emu", 
            "vitis_hw"
        ], 
        "category": "canary"
    }, 
    "platform_properties": {
        "vck190": {
            "host": {
                "linker": {
                    "librarypaths": [
                        "$(SYSROOT)/usr/lib", 
                        "${SYSROOT}/opt/xilinx/xrt/lib"
                    ]
                }, 
                "compiler": {
                    "includepaths": [
                        "$(SYSROOT)/usr/include"
                    ], 
                    "options": "--sysroot=$(SYSROOT)"
                }
            }
        }
    }
}
